<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_alert_dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_alert_edit_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:textColor="@color/sdColorBlack"
        android:textSize="@dimen/sp_18"
        android:textStyle="normal" />
    <EditText
        android:id="@+id/edt_alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:scrollbars="vertical"
        android:maxLength="30"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_alert_dialog_edit"
        android:textColor="@color/sdColorBlack"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/list_item_deliver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_alert_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_43"
            android:layout_weight="1"
            android:background="@drawable/dialog_alert_edit_cancel_normal"
            android:gravity="center"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_alert_dialog_line"
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="@dimen/dp_43"
            android:background="@color/list_item_deliver" />

        <Button
            android:id="@+id/btn_alert_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_43"
            android:layout_weight="1"
            android:background="@drawable/dialog_alert_edit_sure_normal"
            android:gravity="center"
            android:textColor="@color/sdColorBlack"
            android:textSize="@dimen/sp_16"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>