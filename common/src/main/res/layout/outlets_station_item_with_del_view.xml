<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:roundiv="http://schemas.android.com/tools">
    <data>
        <variable
            name="pageEntity"
            type="com.xbj.common.views.listItem.OutletsStationListItemWithDelViewModel" />
        <variable
            name="pictureTitleView"
            type="com.xbj.common.views.listItem.OutletsStationListItemWithDelView" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>
    <com.nalan.swipeitem.recyclerview.SwipeItemLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:clickable="true"
            android:onClick="@{pictureTitleView::onItemClick}"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/white_radius6_shape"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/dp_14"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:gravity="center|left"
                android:layout_height="@dimen/dp_94">
                <com.yto.common.RoundAngleImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/place_holder_pic"
                    android:scaleType="fitXY"
                    roundiv:radius="@dimen/dp_10"
                    roundiv:left_bottom_radius="@dimen/dp_10"
                    roundiv:left_top_radius="@dimen/dp_10"
                    roundiv:right_bottom_radius="@dimen/dp_10"
                    roundiv:right_top_radius="@dimen/dp_10"
                    loadImageUrl="@{pageEntity.pictureUrl}"
                    android:layout_height="@dimen/dp_80">
                </com.yto.common.RoundAngleImageView>
                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent">

                </View>
                <com.yto.common.RoundAngleImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/place_holder_pic"
                    android:scaleType="fitXY"
                    roundiv:radius="@dimen/dp_10"
                    roundiv:left_bottom_radius="@dimen/dp_10"
                    roundiv:left_top_radius="@dimen/dp_10"
                    roundiv:right_bottom_radius="@dimen/dp_10"
                    roundiv:right_top_radius="@dimen/dp_10"
                    loadImageUrl="@{pageEntity.pictureUrl2}"
                    android:layout_height="@dimen/dp_80">
                </com.yto.common.RoundAngleImageView>
                <View
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent">

                </View>
                <com.yto.common.RoundAngleImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/place_holder_pic"
                    android:scaleType="fitXY"
                    roundiv:radius="@dimen/dp_10"
                    roundiv:left_bottom_radius="@dimen/dp_10"
                    roundiv:left_top_radius="@dimen/dp_10"
                    roundiv:right_bottom_radius="@dimen/dp_10"
                    roundiv:right_top_radius="@dimen/dp_10"
                    loadImageUrl="@{pageEntity.pictureUrl3}"
                    android:layout_height="@dimen/dp_80">
                </com.yto.common.RoundAngleImageView>
                <!--  <View
                      android:layout_width="@dimen/dp_10"
                      android:layout_height="match_parent"></View>
                  <ImageView
                      android:layout_width="@dimen/dp_140"
                      loadImageUrl="@{pageEntity.picUrl3}"
                      android:layout_height="@dimen/dp_114">
                  </ImageView>
      -->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yto.base.customview.GoogleBoldFontTextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18"
                    android:text="@{pageEntity.orgName}"
                    android:layout_height="wrap_content">
                </com.yto.base.customview.GoogleBoldFontTextView>
                <per.wsj.library.AndRatingBar
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="@{pageEntity.showCommentStarFlag?View.VISIBLE:View.GONE}"
                    android:layout_height="@dimen/dp_16"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:rating="@{pageEntity.commentStars}"
                    android:stepSize="0.1"
                    app:starSpacing="@dimen/dp_4"
                    android:numStars="5"
                    app:starColor="@color/color_FFC91F"
                    app:bgDrawable="@drawable/star_def"
                    app:starDrawable="@drawable/star_pressed"
                    >
                </per.wsj.library.AndRatingBar>
                <com.yto.base.customview.GoogleBoldFontTextView
                    android:layout_marginLeft="@dimen/dp_6"
                    android:visibility="@{pageEntity.showCommentStarFlag?View.VISIBLE:View.GONE}"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center|right"
                    android:textColor="@color/color_333333"
                    android:text="@{pageEntity.commentStarsStr}"
                    android:layout_height="match_parent">
                </com.yto.base.customview.GoogleBoldFontTextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_width="@dimen/dp_14"
                        android:src="@drawable/map_icon"
                        android:layout_height="@dimen/dp_14">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_6"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14"
                        android:text="@{pageEntity.detailedAddress}"
                        android:layout_height="wrap_content">
                    </TextView>
                    <!--                    android:text='@{"地址："+pageEntity.detailedAddress}'-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:src="@drawable/time_icons"
                        android:layout_height="@dimen/dp_14">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14"
                        android:text="@{pageEntity.businessTime}"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:gravity="center|left"
                android:layout_height="wrap_content">

                <!--     <per.wsj.library.AndRatingBar
                         android:visibility="@{pageEntity.showCommentStarFlag?View.VISIBLE:View.GONE}"
                         android:layout_width="wrap_content"
                         android:layout_height="@dimen/dp_16"
                         android:clickable="false"
                         android:isIndicator="true"
                         android:rating="@{pageEntity.commentStars}"
                         android:stepSize="0.5"
                         app:starSpacing="@dimen/dp_4"
                         android:numStars="5"
                         app:starColor="@color/color_FFC91F"
                         app:bgDrawable="@drawable/star_def"
                         app:starDrawable="@drawable/star_pressed"
                         >
                     </per.wsj.library.AndRatingBar>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="@{pageEntity.mShowStation?View.GONE:View.VISIBLE}"
                        android:gravity="center"
                        android:paddingRight="@dimen/dp_14"
                        android:paddingLeft="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_ff7100"
                        android:background="@drawable/bg_fff1dd_radius2_shape"
                        android:text="@{pageEntity.mEnterpriseLabel}"
                        android:layout_height="@dimen/dp_20">
                    </TextView>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:id="@+id/express_img_layout"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center|right"
                    android:layout_height="wrap_content">
                    <!--                    android:background="@drawable/bg_red_radius2_shape"-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|right"
                        android:text="@{pageEntity.shareOrAloneName}"
                        android:textColor="@color/color_ffff8E00"
                        android:textSize="@dimen/sp_12"
                        android:visibility="@{pageEntity.mShowShareOutlets?View.VISIBLE:View.GONE}"></TextView>
                    <TextView
                        android:visibility="@{pageEntity.mShowOutlets?View.VISIBLE:View.GONE}"
                        android:gravity="center|right"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_ffff8E00"
                        android:text="@{pageEntity.shareOrAloneName}"
                        android:layout_height="@dimen/dp_20">
                    </TextView>
                    <TextView
                        android:visibility="@{pageEntity.mShowStation?View.VISIBLE:View.GONE}"
                        android:gravity="center|right"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_ffff8E00"
                        android:text="@{pageEntity.shareOrAloneName}"
                        android:layout_height="@dimen/dp_20">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <!--  <LinearLayout
                  android:layout_marginTop="@dimen/dp_8"
                  android:layout_width="match_parent"
                  android:gravity="center|left"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="@dimen/dp_14"
                      android:src="@drawable/time_icons"
                      android:layout_height="@dimen/dp_14">

                  </ImageView>
                  <TextView
                      android:layout_marginLeft="@dimen/dp_6"
                      android:layout_width="wrap_content"
                      android:textColor="@color/color_999999"
                      android:textSize="@dimen/sp_14"
                      android:text='@{"时间："+pageEntity.businessTime}'
                      android:layout_height="wrap_content">
                  </TextView>
              </LinearLayout>-->
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_delete"
                android:layout_gravity="center"
                android:background="@drawable/shape_top_right_left_radius6_red"
                android:onClick="@{pictureTitleView::btnDel}"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:text="删除"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_gravity="center"
                android:onClick="@{pictureTitleView::btnUpdate}"
                android:background="@drawable/shap_bottom_right_and_left_radius6_666666"
                android:textSize="16sp"
                android:text="编辑"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"/>
