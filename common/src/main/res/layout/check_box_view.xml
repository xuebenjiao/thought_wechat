<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.checkbox.CheckBoxViewViewModel" />
        <variable
            name="pictureTitleView"
            type="com.xbj.common.views.checkbox.CheckBoxView" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:onClick="@{pictureTitleView::onClick}"
            android:layout_height="match_parent"
            >
            <CheckBox
                android:layout_marginLeft="@dimen/dp_42"
                android:id="@+id/item_check_btn"
                android:layout_width="@dimen/dp_24"
                android:clickable="false"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center"
                android:checked="@={viewModel.subCheck}"
                android:background="@drawable/radio_btn_selector"
                android:button="@null"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/item_check_btn"
                android:id="@+id/layout_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/gekou_tv"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:clickable="true"
                    android:textSize="@dimen/sp_14"
                    android:text="@{viewModel.mContent}"
                    android:textColor="@color/scan_list_exception_order_font"
                    android:layout_height="wrap_content"
                    >
                </TextView>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                style="@style/ViewLineHorizontalOnePx"/>
        </RelativeLayout>

    </LinearLayout>
</layout>