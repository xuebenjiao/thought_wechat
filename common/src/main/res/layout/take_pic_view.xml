<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.listItem.TakePicViewModel" />
        <variable
            name="pictureTitleView"
            type="com.xbj.common.views.listItem.TakePicView" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>
    <!--   android:visibility="@{viewModel.showLayoutFlag?View.VISIBLE:View.GONE}"-->
    <FrameLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--

            android:paddingBottom="@dimen/dp_19"
            android:paddingTop="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:background="@drawable/bg_1a00c791_radius10_shape"-->
        <LinearLayout
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:orientation="horizontal">

            <com.xbj.common.RoundAngleImageView
                android:onClick="@{pictureTitleView::takeOrSelectPic}"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                roundiv:radius="@dimen/dp_10"
                roundiv:left_bottom_radius="@dimen/dp_10"
                roundiv:left_top_radius="@dimen/dp_10"
                roundiv:right_top_radius="@dimen/dp_10"
                roundiv:right_bottom_radius="@dimen/dp_10"
                android:src="@drawable/camera_clipped"
                loadImageUrl="@{viewModel.pictureUrl}"
                android:layout_height="match_parent"/>
<!--
            <ImageView
                android:id="@+id/camera"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                imageUrl="@{viewModel.pictureUrl}"
                android:gravity="center"
                android:layout_height="match_parent">
            </ImageView>-->
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:visibility="@{TextUtils.isEmpty(viewModel.pictureUrl)?View.GONE:View.VISIBLE}"
            android:onClick="@{pictureTitleView::clickDelImg}"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="right"
                android:id="@+id/delete_image_view"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/form_del"/>
        </LinearLayout>
    </FrameLayout>
</layout>