<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.titleview.TitleViewViewModel" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/item_file_name"
            android:layout_width="match_parent"
            android:visibility="@{ (!TextUtils.isEmpty(viewModel.title) &amp; viewModel.isShowTitle)? View.VISIBLE:View.GONE }"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_44"
            android:gravity="center_vertical"
            android:text="@{viewModel.title}"
            android:textColor="@color/black1"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/content"
            android:visibility="@{  TextUtils.isEmpty(viewModel.content) ? View.GONE:View.VISIBLE }"
            android:layout_width="match_parent"
            android:minHeight="@dimen/dp_44"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center|left"
            android:text="@{viewModel.content}"
            android:textColor="@color/black1"
            android:textSize="16sp"
           />
        <!--            android:ellipsize="end"
            android:maxLines="1"-->
        <View style="@style/ViewLineHorizontalOnePx"/>
<!--        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/black1" />-->
    </LinearLayout>
</layout>