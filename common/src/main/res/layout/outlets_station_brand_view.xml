<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.listItem.OutletsStationBrandViewModel" />
        <variable
            name="pictureTitleView"
            type="com.xbj.common.views.listItem.OutletsStationBrandView" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>
    <LinearLayout
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_express_company_name"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_32"
            android:background="@{viewModel.isSelect?@drawable/bt_selected_bg:@drawable/bt_normal_bg}"
            android:gravity="center"
            android:text="@{viewModel.brandName}"
            android:textColor="@{viewModel.isSelect?@color/white:@color/color_c0c4cc}"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</layout>