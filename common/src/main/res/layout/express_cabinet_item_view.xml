<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.listItem.ExpressCabinetItemViewViewModel" />
        <variable
            name="presenter"
            type="com.xbj.common.views.listItem.ExpressCabinetItemView" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>
    <!--   <com.nalan.swipeitem.recyclerview.SwipeItemLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">-->
    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:visibility="@{viewModel.showTitleLayoutFlag?View.VISIBLE:View.GONE}"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:text="格口"
                android:layout_weight="1"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="价格"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="剩余数量"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:text="预约数量"
                android:layout_weight="2"
                android:layout_height="match_parent">

            </TextView>

        </LinearLayout>
        <LinearLayout
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="@{viewModel.geKouName}"
                android:layout_height="match_parent">
            </TextView>
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="￥0.40"
                android:layout_height="match_parent">

            </TextView>
            <TextView
                android:gravity="center"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:text="@{viewModel.geKouSurplusStr}"
                android:layout_height="match_parent">

            </TextView>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <TextView
                    android:clickable="true"
                    android:onClick="@{presenter::handleReduce}"
                    android:gravity="center"
                    android:layout_width="@dimen/dp_0"
                    android:textSize="@dimen/sp_18"
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </TextView>
                <EditText
                    android:gravity="center"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_0"
                    android:text="@={viewModel.appointStr}"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </EditText>
                <TextView
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="@{presenter::handlePlus}"
                    android:layout_width="@dimen/dp_0"
                    android:textSize="@dimen/sp_18"
                    android:text="+"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_8"
            style="@style/ViewLineHorizontalOnePx"/>

    </LinearLayout>
    <!--  <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent">
          <Button
              android:id="@+id/delete"
              android:text="删除"
              android:onClick="@{presenter::btnDel}"
              android:textColor="#ffffff"
              android:textSize="16sp"
              android:background="@drawable/btn_delete"
              android:layout_width="100dp"
              android:layout_height="match_parent"/>
      </LinearLayout>-->
    <!--    </com.nalan.swipeitem.recyclerview.SwipeItemLayout>-->
</layout>