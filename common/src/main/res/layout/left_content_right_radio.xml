<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.xbj.common.views.checkbox.LeftContentRightRadioViewModel" />
        <variable
            name="clickEvent"
            type="com.xbj.common.views.checkbox.LeftContentRightRadioView" />

        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
        <import type="androidx.databinding.ObservableField" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            >
            <TextView
                android:gravity="center|left"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:clickable="true"
                android:textSize="@dimen/sp_14"
                android:text="@{viewModel.title}"
                android:textColor="@color/scan_list_exception_order_font"
                android:layout_height="match_parent"
                >
            </TextView>
            <LinearLayout
                android:clickable="true"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="@{clickEvent::onItemClick}"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/item_check_btn"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:background="@{viewModel.itemCheck? @drawable/radio_pre : @drawable/radio_def}"
                    android:clickable="true"
                    android:onClick="@{clickEvent::onItemClick}"
                    >
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            style="@style/ViewLineHorizontalOnePx"/>
    </LinearLayout>
</layout>