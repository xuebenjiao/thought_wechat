                <LinearLayout
                    android:id="@+id/login_invitation_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_title"
                    android:gravity="center">

                    <ImageView
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tabbar_mine_default"></ImageView>

                    <EditText
                        android:background="@null"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:textSize="@dimen/sp_14"
                        android:singleLine="true"
                        android:text="@={pageEntity.invitationCode}"
                        android:textColorHint="@color/btnNotClickOrEtHintColor"
                        android:theme="@style/MyEditText"
                        android:hint="@string/register_invitation_hint"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/devider"
                    android:layout_below="@+id/login_invitation_code_layout"
                    style="@style/ViewLineHorizontalOnePx"/>
                <LinearLayout
                    android:id="@+id/login_phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/devider"
                    android:gravity="center">

                    <ImageView
