                        android:visibility="gone"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/tabbar_mine_default"></ImageView>

                    <EditText
