                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:hint="@string/account_login_phone_hint"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:text="@={pageEntity.registerPhone}"
                        android:textColorHint="@color/btnNotClickOrEtHintColor"
                        android:textSize="@dimen/sp_14"
                        android:theme="@style/MyEditText" />
                </LinearLayout>
                <View
                    android:id="@+id/devider1"
                    android:layout_below="@+id/login_phone_layout"
                    style="@style/ViewLineHorizontalOnePx"/>


                <LinearLayout
                    android:id="@+id/validate_code_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/devider1"
                    android:gravity="center">

