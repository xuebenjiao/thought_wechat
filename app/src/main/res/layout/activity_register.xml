                        android:layout_weight="1"
                        android:background="@null"
                        android:layout_height="@dimen/dp_50"
                        android:hint="@string/register_verification_code_hint"
                        android:singleLine="true"
                        android:text="@={pageEntity.validateCode}"
                        android:textColorHint="@color/btnNotClickOrEtHintColor"
                        android:textSize="@dimen/sp_14"
                        android:theme="@style/MyEditText" />
                    <Button
                        android:layout_width="@dimen/dp_100"
                        android:onClick="@{clickHandler::getValidateCode}"
                        android:textColor="@color/white"
                        android:background="@drawable/login_btn_click_shape"
                        android:text="@{pageEntity.validateBtnName}"
                        android:layout_height="@dimen/dp_30"></Button>
