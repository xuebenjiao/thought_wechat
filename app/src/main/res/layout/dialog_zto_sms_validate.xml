<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear_alert_dialog_bg"
    android:orientation="vertical"
    android:background="@drawable/bg_corners_white_1"
    android:layout_marginBottom="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <TextView
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_16"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dp_10"
        android:text="中通快递需手机短信验证码"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/sms_phone"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_14"
        android:gravity="center|left"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dp_10"
        android:text="已发送到手机号："
        android:layout_height="wrap_content">
    </TextView>

    <LinearLayout
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/car_sign_bk_shape"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:visibility="gone"
            android:id="@+id/item_image"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/img_yto">
        </ImageView>
        <EditText
            android:id="@+id/edt_alert_dialog_content"
            android:paddingLeft="@dimen/dp_10"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColorHint="@color/float_cancle_font_color"
            android:background="@null"
            android:textSize="@dimen/sp_14"
            android:hint="请输入短信验证码"
            android:layout_height="match_parent">
        </EditText>
        <TextView
            android:id="@+id/verify_sms_code"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_float_modify_btn_shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"></TextView>
    </LinearLayout>
    <!--
        <View
            style="@style/ViewLineHorizontalOnePx"/>-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zto_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/note_font_color"
            android:textStyle="bold"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_16" />
        <View style="@style/ViewLineVerticalOneDp" />
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:text="@string/sure"
            android:textColor="@color/color_5242FF">
        </TextView>
        <!--     android:textSize="@dimen/sp_16" />
         <Button
             android:layout_marginRight="@dimen/dp_16"
             android:layout_marginLeft="@dimen/dp_16"
             android:background="@drawable/login_btn_click_shape"
             android:textColor="@color/white"
             android:id="@+id/tv_confirm"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textStyle="bold"
             android:gravity="center"
             android:text="@string/sure"
             android:textSize="@dimen/sp_16" />-->
    </LinearLayout>

</LinearLayout>