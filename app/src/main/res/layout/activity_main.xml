<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="entity"
            type="com.thoughtwork.comment.pageentity.HomePageEntity" />
        <variable
            name="presenter"
            type="com.thoughtwork.comment.presenter.HomePageHandler" />
        <import type="com.thoughtwork.comment.presenter.HomePageHandler"></import>
        <import type="android.view.View"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_clMainView"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:visibility="@{entity.showTopTitle?View.VISIBLE:View.GONE}"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/dp_10"
            android:background="@color/theme_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            >
            <LinearLayout
                android:layout_width="@dimen/dp_100"
                android:layout_marginLeft="@dimen/dp_8"
                android:clickable="true"
                android:focusable="true"
                android:layout_height="match_parent"
                android:onClick="@{presenter::onSelectCity}">
                <Button
                    android:onClick="@{presenter::onSelectCity}"
                    android:layout_gravity="center"
                    android:id="@+id/title_layout_left_btn"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:background="@drawable/location_icons"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/sdColorWhite"
                    android:text="@{entity.locationCity}"
                    android:layout_height="@dimen/dp_24">
                    <!-- -->
                </TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/title_layout_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/sdColorWhite"
                android:textSize="@dimen/sp_18"
                android:text="@{entity.titleName}">
            </TextView>

            <LinearLayout
                android:visibility="@{entity.isShowMapFlag?View.VISIBLE:View.GONE}"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_height="match_parent">
                <Button
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/map_icons"
                    />
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/container"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_52"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"><!--上传隐藏tab,下划显示tab-->
        </FrameLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            app:labelVisibilityMode="labeled"
            app:itemTextColor="@color/bottom_tab_selector"
            >
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>